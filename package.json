{
   "name": "nextjs-electron-mp3-player",
   "version": "1.0.0",
   "description": "MP3 player using Next.js and Electron with folder selection",
   "main": "main.js",
   "scripts": {
     "dev": "next dev",
     "build": "next build",
     "start": "next start",
     "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
     "electron-build": "next build && electron-builder",
     "electron": "wait-on http://localhost:3000 && electron ."
   },
   "dependencies": {
     "next": "^12.0.0",
     "react": "^17.0.2",
     "react-dom": "^17.0.2",
     "electron": "^13.0.0",
     "fs-extra": "^10.0.0"
   },
   "devDependencies": {
     "concurrently": "^6.2.0",
     "wait-on": "^5.3.0",
     "electron-builder": "^22.11.7",
     "electron-is-dev": "^2.0.0",
     "autoprefixer": "^10.2.6",
     "postcss": "^8.3.5",
     "tailwindcss": "^2.2.4"
   }
 }